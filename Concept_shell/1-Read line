#include <stdio.h>
#include <sys/types.h>
#include <stdlib.h>

/**
 * main - prints a prompt and reads a line
 *
 * Return: 0
 */
int main(void)
{
	char *line = NULL;
	size_t len = 0;
	ssize_t read;

	while (1)
	{
		printf("$ ");
		read = getline(&line, &len, stdin);

		if (read == -1) /* EOF (Ctrl+D) */
		{
			printf("\n");
			break;
		}

		printf("%s", line);
	}

	free(line);
	return (0);
}
